[user]
  name = Duncan Parkinson
  email = duncan.parkinson@mac.com
  signingkey = E8E22C42
[color]
  ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color.diff]
  meta = yellow
  frag = magenta
  old = red
  new = green
[alias]
  a = add -A
  ap = add -Ap
  au = add -u
  br = branch -v
  c = commit -v
  ca = commit -av
  ch = cherry-pick
  cm = commit -v --amend
  co = checkout
  cop = checkout -p
  d = diff -M
  dw = diff -M --color-words="."
  dc = diff --cached -M
  dcw = diff --cached -M --color-words="."
  dt = difftool
  f = fetch
  rh = reset --hard
  st = status
  ci = commit -v
  di = diff
  dc = diff --cached
  amend = commit --amend
  aa = add --all
  ff = merge --ff-only
  pullff = pull --ff-only
  noff = merge --no-ff
  fa = fetch --all
  pom = push origin master
  b = branch
  ds = diff --stat=160,120
  dh1 = diff HEAD~1
  up = pull --rebase

  # Divergence (commits we added and commits remote added)
  div = divergence

  # Goodness (summary of diff lines added/removed/total)
  gn = goodness
  gnc = goodness --cached

  # Fancy logging.
  #   h = head
  #   hp = head with patch
  #   r = recent commits, only current branch
  #   ra = recent commits, all reachable refs
  #   l = all commits, only current branch
  #   la = all commits, all reachable refs
  #   b = all branches
  #   bs = all branches, sorted by last commit date
  head = !git r -1
  h = !git head
  hp = "!. ~/.githelpers && show_git_head"
  r = !GIT_NO_PAGER=1 git l -30
  ra = !git r --all --not refs/notes/gtm-data
  l = "!. ~/.githelpers && pretty_git_log"
  la = !git l --branches=*
  b = "!. ~/.githelpers && pretty_git_branch"
  bs = "!. ~/.githelpers && pretty_git_branch_sorted"
  ctags = !.git/hooks/ctags
  rad = !git ra --date-order
  lad = !git la --date-order
	conflicted = !vim +Conflicted

[diff]
  tool = Kaleidoscope
[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
  prompt = false
[merge]
  summary = true
  verbosity = 1
  tool = Kaleidoscope
[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustExitCode = true
  keepbackup=false
[mergetool]
  prompt = false
[apply]
  whitespace = nowarn
[branch]
  autosetupmerge = true
[push]
  # 'git push' will push the current branch to its tracking branch
  # the usual default is to push all branches
  default = current
  followTags = true
[core]
  autocrlf = input
  editor = vim
  excludesfile = /Users/duncan/.gitignore_global
[advice]
  statusHints = false
[diff]
  # Git diff will use (i)ndex, (w)ork tree, (c)ommit and (o)bject
  # instead of a/b/c/d as prefixes for patches
  mnemonicprefix = true
[rerere]
  # Remember my merges
  # http://gitfu.wordpress.com/2008/04/20/git-rerere-rereremember-what-you-did-last-time/
  enabled = true
[mailmap]
  file = ~/.mailmap
[init]
  templatedir = ~/.git_template
[pull]
  rebase = true
[url "git@github.com:"]
	insteadOf = https://github.com/
